<?xml version="1.0" encoding="utf-8"?>
<Project>
  <PropertyGroup>
    <Authors>Andrey G.</Authors>
    <Company>Mt-Rele</Company>
    <Copyright>Copyright Mt-Rele 1993 â€“ 2023.</Copyright>
    <NeutralLanguage>ru-RU</NeutralLanguage>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/g-aa/mt-validation</RepositoryUrl>
    <PackageProjectUrl>https://github.com/g-aa/mt-validation</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>iconFV.png</PackageIcon>
    <Build_Version Condition=" '$(Build_Version)' == '' ">0.0.0</Build_Version>
    <Build_Number Condition=" '$(Build_Number)' == '' ">$(Build_Version).0</Build_Number>
    <Version>$(Build_Version)</Version>
    <PackageVersion>$(Build_Version)</PackageVersion>
    <FileVersion>$(Build_Number)</FileVersion>
    <AssemblyVersion>$(Build_Number)</AssemblyVersion>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="SonarAnalyzer.CSharp" Version="9.4.0.72892">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <PropertyGroup>
    <LangVersion>latest</LangVersion>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <Nullable>enable</Nullable>
    <ImplicitUsings>true</ImplicitUsings>
  </PropertyGroup>
  <Target Name="InjectVersionFromFile" BeforeTargets="BeforeBuild">
    <ReadLinesFromFile File="..\..\.version">
      <Output TaskParameter="Lines" PropertyName="Build_Version"/>
    </ReadLinesFromFile>
    <Message Importance="High" Text="Project version from file '.version' - $(Build_Version)"/>
  </Target>
</Project>